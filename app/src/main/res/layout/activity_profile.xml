<ScrollView
    android:id="@+id/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileActivity"
    style="@style/AppTheme"
    android:background="@drawable/fondo_login_alpha">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvProfile_nombre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Nombre: "/>

                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/tvProfile_DNI1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Usuario: "/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tvProfile_padron1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Padron: "/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:id="@+id/tvProfile_mail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Mail: "/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tvProfile_psw1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Actual: "/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tvProfile_pswNueva1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Nueva: "/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvProfile_nombre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="20sp"
                    android:text="Franco Etcheverri"/>

                <TextView
                    android:id="@+id/tvProfile_DNI2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="20sp"
                    android:text="33333333"/>

                <TextView
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tvProfile_padron2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTitleFont"
                    android:textSize="20sp"
                    android:text="99999"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/black"/>

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/tvProfile_mail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:text="franco@mail.com"/>

                <EditText
                    android:id="@+id/tvProfile_psw2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:hint="Ingrese la contraseña actual" />

                <EditText
                    android:id="@+id/tvProfile_pswNueva2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:hint="Ingrese la nueva contraseña" />

                <EditText
                    android:id="@+id/tvProfile_pswNueva3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:hint="Repita la nueva contraseña" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/TextButton"
                        android:layout_marginTop="30dp"
                        android:layout_margin="10dp"
                        android:text="GUARDAR"
                        android:onClick="guardarCambios"/>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>