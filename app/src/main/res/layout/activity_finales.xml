<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main2"
    tools:context=".FinalesActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_finales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_nuevoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscribirse a otro final"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_finales"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>