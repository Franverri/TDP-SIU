<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvInscripcionCard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clickable="true"
        style="@style/Cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvI_nombreMateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/tvI_cancelButton"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:foregroundGravity="center_vertical"/>

            <TextView
                android:id="@+id/tvI_nombreCatedra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvI_nombreMateria"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvI_horario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvI_nombreCatedra"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>