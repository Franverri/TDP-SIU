<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvFechaExamenCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvNumeroExamen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#000000"/>


            <ImageView
                android:id="@+id/ivDeleteButton"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:foregroundGravity="center_vertical"/>

            <TextView
                android:id="@+id/tvFechaExamen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNumeroExamen"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:text="01/12/18"/>

            <TextView
                android:id="@+id/tvHoraExamen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFechaExamen"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:text="18:00"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>