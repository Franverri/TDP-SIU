<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Background">
        <item name="android:background">@drawable/fondo_login</item>
    </style>

    <style name="AppTheme.LightBackground">
        <item name="android:background">@drawable/fondo_light2</item>
    </style>

    <style name="Cardview" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">7dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">8dp</item>
    </style>


</resources>
